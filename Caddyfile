mm.nightowls.app {
    # 1. Static assets
    root * /srv
    encode gzip zstd

    # Handle API routes first - these take absolute precedence
    handle /api/* {
        reverse_proxy night-owls:5888
    }
    
    handle /health {
        reverse_proxy night-owls:5888
    }
    
    handle /swagger/* {
        reverse_proxy night-owls:5888
    }
    
    # Route specific API endpoints to backend (avoiding frontend page conflicts)
    handle /schedules {
        reverse_proxy night-owls:5888
    }
    
    handle /shifts/available {
        reverse_proxy night-owls:5888
    }
    
    handle /bookings/my {
        reverse_proxy night-owls:5888
    }
    
    handle /push/vapid-public {
        reverse_proxy night-owls:5888
    }
    
    # Route write operations for API endpoints to backend
    @api_writes {
        method POST PUT PATCH DELETE
        path /schedules* /shifts* /bookings* /reports* /push*
    }
    reverse_proxy @api_writes night-owls:5888

    # Handle static files and SPA fallback
    handle {
        # Static files with immutable cache headers
        @immutable path /_app/immutable/*
        header @immutable Cache-Control "public, max-age=31536000, immutable"
        
        try_files {path} /index.html
        file_server
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(self), microphone=(), camera=()"
        -Server
    }

    # Logging
    log {
        output file /var/log/caddy/mm.nightowls.app.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}
