mm.nightowls.app {
    # 1. Static assets
    root * /srv
    encode gzip zstd

    # 2. API goes to Go
    @api path /api/* /health /swagger/*
    reverse_proxy @api night-owls:5888
    
    # Legacy endpoints - consider moving to /api/ in future
    @legacy path /schedules* /shifts* /bookings* /reports* /push*
    reverse_proxy @legacy night-owls:5888

    # 3. Client-side routing fallback
    try_files {path} /index.html
    file_server

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(self), microphone=(), camera=()"
        -Server
    }

    # Static files with immutable cache headers
    @immutable path /_app/immutable/*
    header @immutable Cache-Control "public, max-age=31536000, immutable"

    # Logging
    log {
        output file /var/log/caddy/mm.nightowls.app.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}
