mm.nightowls.app {
    # Automatic HTTPS with Let's Encrypt
    tls {
        # You can specify email here if needed: email your-email@domain.com
    }

    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(self), microphone=(), camera=()"
        
        # Remove server identification
        -Server
    }

    # Enable compression
    encode gzip

    # API routes
    handle /api* {
        reverse_proxy night-owls:5888 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Backend direct routes (for webhooks, health checks, etc.)
    handle /health {
        reverse_proxy night-owls:5888
    }
    
    handle /schedules* {
        reverse_proxy night-owls:5888
    }
    
    handle /shifts* {
        reverse_proxy night-owls:5888
    }
    
    handle /bookings* {
        reverse_proxy night-owls:5888
    }
    
    handle /reports* {
        reverse_proxy night-owls:5888
    }
    
    handle /push* {
        reverse_proxy night-owls:5888
    }
    
    handle /swagger* {
        reverse_proxy night-owls:5888
    }

    # Static assets with long cache
    handle /assets/* {
        reverse_proxy night-owls:5888 {
            header_down Cache-Control "public, max-age=31536000, immutable"
        }
    }

    # Frontend fallback - everything else goes to the SPA
    handle {
        reverse_proxy night-owls:5888 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Logging
    log {
        output file /var/log/caddy/mm.nightowls.app.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}
