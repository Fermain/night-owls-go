mm.nightowls.app {
    # Automatic HTTPS with Let's Encrypt (enabled by default)
    
    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(self), microphone=(), camera=()"
        
        # Remove server identification
        -Server
    }

    # Serve the SvelteKit build from /srv
    root * /srv
    encode gzip zstd
    
    # API and backend routes go to Go
    reverse_proxy /api* night-owls:5888
    reverse_proxy /health night-owls:5888
    reverse_proxy /schedules* night-owls:5888
    reverse_proxy /shifts* night-owls:5888
    reverse_proxy /bookings* night-owls:5888
    reverse_proxy /reports* night-owls:5888
    reverse_proxy /push* night-owls:5888
    reverse_proxy /swagger* night-owls:5888
    
    # Static files with immutable cache headers
    @immutable path /_app/immutable/*
    header @immutable Cache-Control "public, max-age=31536000, immutable"
    
    # Everything else: try files, fall back to index.html for SPA
    try_files {path} /index.html
    file_server

    # Logging
    log {
        output file /var/log/caddy/mm.nightowls.app.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}
